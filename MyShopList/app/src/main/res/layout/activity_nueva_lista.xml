<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context="com.apps.paco.myshoplist.nuevaLista">

    <RelativeLayout
        android:layout_width="370dp"
        android:layout_height="520dp"
        android:background="#7d29ab"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/bt_aceptar_nueva_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bt_cancelar_nueva_lista"
            android:layout_alignBottom="@+id/bt_cancelar_nueva_lista"
            android:layout_alignStart="@+id/tx_nueva_lista"
            android:text="Aceptar" />

        <TextView
            android:id="@+id/lb_nombre_nueva_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="147dp"
            android:text="Nombre de la nueva lista:"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/tx_nueva_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lb_nombre_nueva_lista"
            android:layout_alignTop="@+id/lb_nombre_nueva_lista"
            android:layout_marginTop="68dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bt_cancelar_nueva_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="15dp"
            android:text="Cancelar" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
